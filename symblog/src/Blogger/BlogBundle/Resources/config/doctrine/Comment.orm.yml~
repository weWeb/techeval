#src/Blogger/BlogBundle/Resources/config/doctrine/Comment.orm.yml
Blogger\BlogBundle\Entity\Comment:
   type: entity
   repositoryClass: Blogger\BlogBundle\Entity\CommentRepository
   table: comment
   id:
      id:
         type: integer
         generator: {strategy: AUTO}
   fields:
      user:
         type: string
      comment:
         type: text
      approved:
         type: boolean
      image:
         type: string
      tags:
         type: text
      created:
         type: datetime
      updated:
         type: datetime
   lifecycleCallbacks:
      preUpdate: [setUpdatedValue]
   manyToOne:
      blog:
         targetEntity: Blog
         inversedBy: comments
         joinColumn:
            name: blog_id
            referencedColumnName: id
        
